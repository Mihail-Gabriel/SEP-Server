@page "/AddBranch"


@using Sep3.Models
@using Sep3.HttpServices

@inject IBranchService BranchService
@inject NavigationManager NavigationManager
<h3>AddBranch</h3>

<div class="form-group"> Branch id:<br/> <input type="number" @bind-value="newBranchItem.branchId"/></div>
<div class="form-group"> Theme: <br/> <input type="text" @bind-value="newBranchItem.theme"/></div>
<div class="form-group"> Branch name:<br/> <input type="text" @bind-value="newBranchItem.branchName"/></div>
<div class="form-group"> City:<br/> <input type="text" @bind-value="newBranchItem.city"/></div>
    

<h3 class="actions">
    <button class="btn btn-outline-dark" @onclick=@AddNewBranch type="button">Create</button>
</h3>

@code {
    private Branch newBranchItem = new Branch();

    
    private async Task AddNewBranch()
    {

        await BranchService.AddBranchAsync(newBranchItem);
        
        NavigationManager.NavigateTo("/Branches");
    }
}
