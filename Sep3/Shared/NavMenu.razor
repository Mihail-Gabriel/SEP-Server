@using Sep3.Pages
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <div class="row">
            <a class="navbar-brand" href="">Sep3</a>
            <button class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                <ul class="nav">
                    <div class="col-md-2">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="Branch" Match="NavLinkMatch.All">
                                <span class="oi oi-home" aria-hidden="true"></span> Branch
                            </NavLink>
                        </li>
                    </div>
                    <div class="col-md-2">
                        <li class="nav-item">
                             <NavLink class="nav-link" href="Login">
                                 <span class="oi oi-lock-unlocked" aria-hidden="true"></span> Login
                             </NavLink>
                        </li>
                        </div>
                    <div class="col-md-4">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="@input">
                                <input class="inputfield" type="text" placeholder="Search..">
                                <span class="oi oi-magnifying-glass"></span>
                            </NavLink>
                        </li>
                    </div>
                    <div class="col-md-2">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="ConceptProofPage">
                                <span class="oi oi-cart" aria-hidden="true"></span>Basket
                            </NavLink>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;

    private string input;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}